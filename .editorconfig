# ------------------------------------------------------------------------------
# | EditorConfig
# ------------------------------------------------------------------------------

# Top-most EditorConfig file
root = true

# ---
# | General Settings
# ---

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# ---
# | EXTENSION Settings
# ---
# YAML Files
[*.{yml,yaml}]
indent_size = 2

# nix Files
[*.{nix}]
indent_size = 2
